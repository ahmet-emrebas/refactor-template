{
  "name": "refactor-template",
  "version": "2.0.2",
  "description": "CLI tool to generate code from template.",
  "main": "main.js",
  "bin": {
    "refactor-template": "main.js"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --build",
    "prebuild:watch": "npm run prebuild",
    "build:watch": "tsc --build --watch",
    "start": "ts-node src/main.ts ",
    "start:dev": "nodemon src/main.ts",
    "start:prod": "node main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahmet-emrebas/refactor-template.git"
  },
  "keywords": [
    "CLI",
    "Generate",
    "Template"
  ],
  "author": "Ahmet Emrebas",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ahmet-emrebas/refactor-template/issues"
  },
  "homepage": "https://github.com/ahmet-emrebas/refactor-template#readme",
  "dependencies": {
    "chalk": "^4.1.0",
    "fs-extra": "^9.1.0",
    "readline-sync": "^1.4.10",
    "validator": "^13.5.2",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/fs-extra": "^9.0.8",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/readline-sync": "^1.4.3",
    "@types/validator": "^13.1.3",
    "@types/yargs": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.0",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.2"
  }
}
